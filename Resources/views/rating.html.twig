{# blackknight467/StarRatingBundle/Resources/views/rating.html.twig #}
{% block rating_widget %}
{% spaceless %}
    <div {{ block('widget_container_attributes') }}>
    	{{ block('form_label') }}
    {% for child in form %}
        {{ form_widget(child, { 'attr': {'class': 'star'} }) }}
        {{ form_label(child, null, {'label-attr': {'class':'star'}}) }}
    {% endfor %}
    </div>
{% endspaceless %}
{% endblock rating_widget %}
